<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= category.name %></title>
    <script src="https://kit.fontawesome.com/4446a25d04.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>

    <div class="container">
        <h1><%= category.name %></h1>

        <div class="category-products-container">
            <% productsByCategory.forEach(product =>  {%>
                <div class="category-product">
                    <div class="delete-product-button hidden">
                        <a href="delete-product/<%= product.id_product %>"><i class="fa-solid fa-trash"></i></a>
                    </div>

                    <img src="<%= product.url%>" alt="Image">

                    <div class="product-info">
                        <h3><%= product.name %></h3>
                        <p><%= product.description%></p>
                        <div class="align-right">
                            <p><%= product.base_price%>€</p>
                            <p><%= product.price%>€</p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <a href="/categories"><button class="button category-button">Back</button></a>
    </div>

</body>
</html>